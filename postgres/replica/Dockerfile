FROM bitnami/postgresql:latest

# Set environment variables for replication
ENV POSTGRESQL_REPLICATION_MODE=slave
ENV POSTGRESQL_REPLICATION_USER=repl_user
ENV POSTGRESQL_REPLICATION_PASSWORD=repl_password
ENV POSTGRESQL_MASTER_HOST=postgres-primary
ENV POSTGRESQL_MASTER_PORT_NUMBER=5432
ENV POSTGRESQL_USERNAME=admin
ENV POSTGRESQL_PASSWORD=admin_password
ENV POSTGRESQL_DATABASE=mydb

# Expose PostgreSQL port
EXPOSE 5432
